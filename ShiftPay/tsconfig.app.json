{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    // Follow Capacitor.js supported version
    "target": "ES2019",
    "lib": ["DOM", "ES2019"]
  }
}
